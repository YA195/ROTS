@page
@model WebApplication3.Pages.DeliveryWorkersModel
@{
    ViewData["Title"] = "Delivery Workers";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="styles.css" />
    <link rel="stylesheet" href="~/css/maneger.css" />
    <style>
        /* Styles for Delivery Workers Page Content */
        .delivery-workers-content {
            background-color: #fff; /* Set background color for the content */
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Add a subtle box shadow */
        }

        #deliveryWorkerForm {
            max-width: 600px; /* Set max width for the form */
            margin: 0 auto; /* Center the form horizontally */
        }

        .form-group {
            margin-bottom: 15px;
        }

        button {
            background-color: #007bff; /* Set button background color */
            color: #fff; /* Set button text color */
            padding: 10px 20px;
            border: none;
            border-radius: 3px;
            cursor: pointer;
        }

            button:hover {
                background-color: #0056b3; /* Change button background color on hover */
            }
    </style>
</head>
<body>

    <div id="wrapper" class="toggled">
        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav nav-pills nav-stacked" id="menu">
                <li class="active">
                    <a asp-page="/Items">Menu </a>
                </li>
                <li>
                    <a asp-page="/DeliveryWorkers">Workers</a>
                </li>
                <li>
                    <a asp-page="#">Orders</a>
                </li>
                <li>
                    <a asp-page="#">Customers</a>
                </li>
                <li>
                    <a asp-page="#">Supliers</a>
                </li>
                <li>
                    <a asp-page="/Discount">Promo Codes</a>
                </li>
                <li>
                    <a asp-page="#">Contact</a>
                </li>
            </ul>
        </div>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <h1>@ViewData["Title"]</h1>
                <!-- Your Delivery Workers page content goes here -->
                <div class="delivery-workers-content">
                    <h2>Your Delivery Workers Page Content</h2>
                    <!-- Add your specific content here -->
                    <!-- For example, you can add your form here -->
                    <form id="deliveryWorkerForm">
                        <!-- Add your form fields here -->
                        <div class="form-group">
                            <label for="name">Name:</label>
                            <input type="text" id="name" name="name" required />
                        </div>
                        <!-- Repeat similar code for other form fields -->
                        <div class="form-group">
                            <label for="email">Email:</label>
                            <input type="email" id="email" name="email" required />
                        </div>
                        <div class="form-group">
                            <label for="phone">Phone:</label>
                            <input type="text" id="phone" name="phone" required />
                        </div>
                        <div class="form-group">
                            <label for="deliveryId">Delivery ID:</label>
                            <input type="text" id="deliveryId" name="deliveryId" required />
                        </div>
                        <div class="form-group">
                            <label for="password">Password:</label>
                            <input type="password" id="password" name="password" required />
                        </div>
                        <div class="form-group">
                            <button type="button" onclick="addDeliveryWorker()">ADD</button>
                            <button type="button" onclick="deleteDeliveryWorker()">DELETE</button>
                            <button type="button" onclick="updateDeliveryWorker()">UPDATE</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- /#page-content-wrapper -->
    </div>
    <!-- /#wrapper -->

    <script src="script.js"></script>
</body>
</html>
