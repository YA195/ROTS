@page
@model WebApplication3.Pages.DiscountModel
@{
    ViewData["Title"] = "Discount";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Discount"]</title>
    <link rel="stylesheet" href="styles.css" />
    <link rel="stylesheet" href="~/css/maneger.css" />
    <style>
        /* Styles for Discount Page Content */
        .discount-content {
            background-color: #fff; /* Set background color for the content */
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Add a subtle box shadow */
        }

        #couponForm {
            max-width: 600px; /* Set max width for the form */
            margin: 0 auto; /* Center the form horizontally */
        }

        .form-group {
            margin-bottom: 15px;
        }

        button {
            background-color: #007bff; /* Set button background color */
            color: #fff; /* Set button text color */
            padding: 10px 20px;
            border: none;
            border-radius: 3px;
            cursor: pointer;
        }

            button:hover {
                background-color: #0056b3; /* Change button background color on hover */
            }
    </style>
</head>
<body>

    <div id="wrapper" class="toggled">
        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav nav-pills nav-stacked" id="menu">
                <li class="active">
                    <a asp-page="/Items">Menu </a>
                </li>
                <li>
                    <a asp-page="/DeliveryWorkers">Workers</a>
                </li>
                <li>
                    <a asp-page="#">Orders</a>
                </li>
                <li>
                    <a asp-page="#">Customers</a>
                </li>
                <li>
                    <a asp-page="#">Supliers</a>
                </li>
                <li>
                    <a asp-page="/Discount">Promo Codes</a>
                </li>
                <li>
                    <a asp-page="#">Contact</a>
                </li>
            </ul>
        </div>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <h1>@ViewData["Title"]</h1>
                <!-- Your Discount page content goes here -->
                <div class="discount-content">
                    <h2>Your Discount Page Content</h2>
                    <!-- Add your specific content here -->
                    <!-- For example, you can add your form here -->
                    <form id="couponForm">
                        <!-- Add your form fields here -->
                        <div class="form-group">
                            <label for="coupon">Coupon:</label>
                            <input type="text" id="coupon" name="coupon" required />
                        </div>
                        <!-- Repeat similar code for other form fields -->
                        <div class="form-group">
                            <label for="code">Code:</label>
                            <input type="text" id="code" name="code" required />
                        </div>
                        <div class="form-group">
                            <label for="discountPercentage">Discount Percentage:</label>
                            <input type="text" id="discountPercentage" name="discountPercentage" required />
                        </div>
                        <div class="form-group">
                            <label for="expireDate">Expire Date:</label>
                            <input type="text" id="expireDate" name="expireDate" required />
                        </div>
                        <div class="form-group">
                            <label for="minTotal">Minimum of Total:</label>
                            <input type="text" id="minTotal" name="minTotal" required />
                        </div>
                        <div class="form-group">
                            <label for="maxDiscount">Maximum Discount:</label>
                            <input type="text" id="maxDiscount" name="maxDiscount" required />
                        </div>
                        <div class="form-group">
                            <button type="button" onclick="addCoupon()">ADD</button>
                            <button type="button" onclick="deleteCoupon()">DELETE</button>
                            <button type="button" onclick="updateCoupon()">UPDATE</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- /#page-content-wrapper -->
    </div>
    <!-- /#wrapper -->

    <script src="script.js"></script>
</body>
</html>
