<body class="login-body">
    <div class="column-wrapper">
        <div class="wrapper @TempData["WrapperActive"]">
            <div class="login-container">
                <h2>Login</h2>
                <form method="post" asp-page-handler="OnPost">
                    <div class="input-box">
                        <span class="icon"><box-icon name='user' type='solid' color='#ffffff'></box-icon></span>
                        <input type="text" id="lusername" name="lusername" required>
                        <label for="username">Username</label>
                    </div>
                    <div class="input-box">
                        <span class="icon"><box-icon name='lock-alt' type='solid' color='#ffffff'></box-icon></span>
                        <input type="password" id="lpassword" name="lpassword" required>
                        <label for="password">Password</label>
                    </div>
                    <button type="submit" name="handler" value="login" class="btn btn-primary">Login</button>
                    <div class="remember-forgot">
                        <label><input type="checkbox">Remember me</label>
                        <a href="#" class="forgot-link">Forgot Password?</a>

                    </div>
                    <div class="login-register">
                        <p>
                            Don't have an account ?
                            <a href="#" class="register-link">
                                Register
                            </a>
                        </p>
                    </div>
                </form>
            </div>
            <div class="register-container">
                <h2>Registration</h2>
                <form method="post" asp-page-handler="RegisterUser">
                    <div class="input-box">
                        <span class="icon"><box-icon name='user' type='solid' color='#ffffff'></box-icon></span>
                        <div class="name-fields">
                            <div class="name-field">
                                <input type="text" id="firstName" name="firstName" required>
                                <label for="firstName">First Name</label>
                            </div>
                            <div class="name-field">
                                <input type="text" id="lastName" name="lastName" required>
                                <label for="lastName">Last Name</label>
                            </div>
