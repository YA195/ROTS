                        <input type="text" id="username" name="username" required>
                        <label for="username">Username</label>
                    </div>
                    <div class="input-box">
                        <span class="icon"><box-icon name='lock-alt' type='solid' color='#ffffff'></box-icon></span>
                        <input type="password" id="password" name="password" required>
                        <label for="password">Password</label>
                    </div>
                    <div class="input-box">
                        <span class="icon"><box-icon name='user' type='solid' color='#ffffff'></box-icon></span>
                        <input type="password" id="confirmPassword" name="confirmPassword" required>
                        <label for="confirmPassword">Confirm Password</label>
                    </div>
                    <div class="input-box">
                        <span class="icon"><box-icon type='solid' name='phone' color='#ffffff'></box-icon></span>
                        <input type="text" id="PhoneNum" name="phoneNum" required>
                        <label for="PhoneNum">Phone Number</label>
                    </div>
                    <button type="submit" class="btn btn-primary" name="handler" value="register">Register</button>
                    <div class="remember-forgot">
                        <label><input type="checkbox"> I agree to the terms & conditions</label>
                    </div>
                    <div class="login-register">
                        <p>
                            Already have an account ?
                            <a href="#" class="login-link">
                                Login
                            </a>
                        </p>
                    </div>

                </form>

            </div>

            
        </div>
       
    </div>
